<?xml version="1.0" encoding="utf-8"?>
<menu:SignInGo2AlbumAS xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 xmlns:menu="com.anvsoft.components.header.popup.menu.*"
			 width="475" height="235">
	
	<s:VGroup top="10" bottom="5" left="5" right="5" gap="15">
		<s:BorderContainer width="100%" height="100%" backgroundColor="0x3a3a3a" cornerRadius="5">
			<s:HGroup top="10" bottom="10" left="5" right="15">
				<s:Group height="100%">
					<s:Image top="20" right="20" source="@Embed('assets/img/go2albumLogo.png')"/>
				</s:Group>
				<s:VGroup width="100%" height="100%" gap="5">
					<s:Label id="tipLabel" width="100%" text="To upload Go2Album for sharing, you need a Go2Album account first. It`s FREE for HTML5 Slideshow Maker users."/>
					<s:HGroup width="100%" horizontalAlign="center" paddingBottom="2">
						<s:Button width="220" id="createAccountBtn" label="Create Go2Album Account"/>
					</s:HGroup>
					<mx:HRule width="100%" height="1" strokeColor="0x222222"/>
					<s:Label id="userTipLable" width="100%" paddingTop="2" text="Use Go2Album ID below for uploading:"/>
					<s:VGroup width="100%" gap="1">
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label id="go2albumIdLabel" text="Go2Album ID:" width="120"/>
							<s:TextInput id="go2albumIdTI" width="160"/>
						</s:HGroup>
						<s:HGroup width="100%" verticalAlign="middle">
							<s:Label id="go2albumPasswordLabel" text="Password:" width="120"/>
							<s:TextInput id="passwordTI" displayAsPassword="true" width="160"/>
						</s:HGroup>
					</s:VGroup>
				</s:VGroup>
			</s:HGroup>
		</s:BorderContainer>
		<s:HGroup horizontalAlign="right" width="100%">
			<s:Button id="okButton" label="OK" width="80"/>
		</s:HGroup>
	</s:VGroup>
</menu:SignInGo2AlbumAS>
