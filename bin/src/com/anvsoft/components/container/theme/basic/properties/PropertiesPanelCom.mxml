					<s:Label text="Random Playing Photos"/>
					<s:CheckBox id="randomPlayingPhotos"/>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label text="Loop"/>
					<s:CheckBox id="continuum"/>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label text="Enable Link"/>
