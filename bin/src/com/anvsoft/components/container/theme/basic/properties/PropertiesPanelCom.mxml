				</s:HGroup>-->
				
				<s:CheckBox id="startAutoPlay" label="Start Auto Play"/>
				<s:CheckBox id="clickToAutoPlay" label="Continue Playing After Clicking"/>
				<s:CheckBox id="randomPlayingPhotos" label="Random Playing Photos"/>
				<s:CheckBox id="continuum" label="Loop"/>
				<s:CheckBox id="enableURL" label="Enable Link"/>
				
			</s:TileGroup>
		</s:Scroller>
	</s:BorderContainer>
