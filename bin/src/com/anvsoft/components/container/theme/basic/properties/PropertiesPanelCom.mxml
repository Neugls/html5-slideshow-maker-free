<?xml version="1.0" encoding="utf-8"?>
<properties:PropertiesPanelAS xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:properties="com.anvsoft.components.container.theme.basic.properties.*">
	
	<s:Label id="propertiesLabel" text="Customize Properties" fontWeight="bold" paddingTop="5" paddingLeft="5"/>
	<s:BorderContainer width="100%" height="100%" backgroundColor="0x333333" borderVisible="false">
		<s:Scroller width="100%" height="100%">
			<s:TileGroup orientation="rows" requestedColumnCount="1" paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5">
				<s:HGroup verticalAlign="middle">
					<s:Label id="htmlTitleLabel" text="Html Title"/>
					<s:TextInput id="html_title" width="150"/>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label id="widthLabel" text="Width" width="50"/>
					<s:NumericStepper id="movieWidth" width="70" minimum="0" maximum="10000"/>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label id="heightLabel" text="Height" width="50"/>
					<s:NumericStepper id="movieHeight" width="70" minimum="0" maximum="10000"/>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label id="frameRateLabel" text="Frame Rate"/>
					<s:NumericStepper id="frameRate" width="70" minimum="0" maximum="120"/>
				</s:HGroup>
				<s:HGroup verticalAlign="middle">
					<s:Label id="bgColorLabel" text="Background Color"/>
					<mx:ColorPicker id="backgroundColor"/>
				</s:HGroup>
				
